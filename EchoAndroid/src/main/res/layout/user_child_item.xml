<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@color/background">


    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:padding="1dp"
        android:background="@color/midBlue"
        android:id="@+id/avatar"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:textSize="14sp"
        android:textColor="@color/darkGrey"
        android:layout_toRightOf="@+id/avatar"
        android:layout_marginLeft="10dp"/>

    <View
        android:id="@+id/line"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_alignLeft="@+id/username"
        android:background="@color/midBlue"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/username"/>


    <TextView
        android:id="@+id/jobAndCompany"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/darkGrey"
        android:layout_below="@+id/line"
        android:layout_alignLeft="@+id/username"
        android:layout_toLeftOf="@+id/emailUser" />

    <TextView
        android:id="@+id/interests"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_alignRight="@id/jobAndCompany"
        android:textColor="@color/darkGrey"
        android:layout_toRightOf="@id/avatar"
        android:layout_alignLeft="@+id/jobAndCompany"
        android:layout_below="@+id/jobAndCompany"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/phone"
        android:textColor="@color/midGrey"
        android:layout_toRightOf="@id/avatar"
        android:layout_alignRight="@id/jobAndCompany"
        android:layout_alignLeft="@+id/jobAndCompany"
        android:layout_below="@+id/interests"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/email"
        android:layout_toLeftOf="@+id/emailUser"
        android:layout_toRightOf="@id/avatar"
        android:textColor="@color/midGrey"
        android:layout_alignLeft="@+id/jobAndCompany"
        android:layout_below="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/phoneUser"
        android:layout_alignBottom="@+id/avatar"
        android:layout_toLeftOf="@+id/emailUser"
        android:padding="2dp"
        android:visibility="invisible"
        android:background="@color/background"
        android:src="@drawable/ic_action_call"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:id="@+id/emailUser"
        android:layout_marginBottom="2dp"
        android:layout_alignBottom="@+id/avatar"
        android:padding="2dp"
        android:background="@color/background"
        android:visibility="invisible"
        android:src="@drawable/ic_action_mail"/>




</RelativeLayout>