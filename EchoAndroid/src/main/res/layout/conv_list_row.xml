<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent" >
    
    <ImageView
        android:id="@+id/rowImage"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentLeft="true"
        android:layout_margin="5dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/convNameRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_alignTop="@+id/rowImage"
        android:layout_marginLeft="5dp"
        android:layout_toLeftOf="@+id/convOnlineRow"
        android:layout_toRightOf="@+id/rowImage"
        android:ems="10"
        android:text="@string/hello_world"
        android:textSize="16sp" >

    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lastMessage"
        android:text="Yojan: I messaged again!"
        android:layout_below="@id/convNameRow"
        android:layout_alignLeft="@id/convNameRow"/>
    
    <TextView
        android:id="@+id/convOnlineRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/convNameRow"
        android:layout_marginRight="5dp"
        android:text="users online"
        android:textAllCaps="true"
        android:textColor="@color/midBlue"
        android:textSize="10sp"
         />

    <TextView
        android:id="@+id/convUsersRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/convNameRow"
        android:layout_alignRight="@+id/convNameRow"
        android:layout_below="@+id/lastMessage"
        android:textAllCaps="true"
        android:ems="10"
        android:text="user user user user"
        android:textSize="10sp"
        android:textColor="#777777"
        android:ellipsize="end"
        android:singleLine="true" />
    
    <TextView
        android:id="@+id/convTagsRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/convUsersRow"
        android:layout_alignRight="@+id/convUsersRow"
        android:layout_below="@+id/convUsersRow"
        android:layout_marginBottom="5dp"
        android:ems="10"
        android:textAllCaps="true"
        android:text="tag tag tag tag tag"
        android:textSize="10sp"
        android:textColor="#777777"
        android:ellipsize="end"
        android:singleLine="true" />

    

</RelativeLayout>
